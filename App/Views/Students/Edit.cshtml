<form asp-controller="Students" asp-action="Edit" method="POST">
  <div class="card">
    <div class="card-header">
      <h4>Edit</h4>
    </div>
    <div class="card-body p-3">
      <div class="mb-3">
        <label class="form-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="MobileNumber"></label>
        <input class="form-control" asp-for="MobileNumber" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="AddressInformation"></label>
        <input class="form-control" asp-for="AddressInformation" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="PersonalNumber"></label>
        <input class="form-control" asp-for="PersonalNumber" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="CourseId"></label>
        <input class="form-control" asp-for="CourseId" />
      </div>
    
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>