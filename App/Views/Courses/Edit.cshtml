<form asp-controller="Courses" asp-action="Edit" method="POST">
  <div class="card">
    <div class="card-header">
      <h4>Edit</h4>
    </div>
    <div class="card-body p-3">
      <div class="mb-3">
        <label class="form-label" asp-for="CourseNumber"></label>
        <input class="form-control" asp-for="CourseNumber" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Length"></label>
        <input class="form-control" asp-for="Length" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Category"></label>
        <input class="form-control" asp-for="Category" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="CourseLevel"></label>
        <input class="form-control" asp-for="CourseLevel" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Status"></label>
        <input class="form-control" asp-for="Status" />
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>